<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiApp3.ViewModels"
             xmlns:controls="clr-namespace:MauiApp3.Controls"
             xmlns:converters="clr-namespace:MauiApp3.Converters"
             x:Class="MauiApp3.Pages.ModelDetailPage"
             x:DataType="viewmodels:ModelDetailViewModel"
             Title="Model Details"
             BackgroundColor="#1E1E1E">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FileSizeConverter x:Key="FileSizeConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Frame Grid.Row="0"
               BackgroundColor="#2C2C2C"
               Padding="20,15"
               CornerRadius="0"
               HasShadow="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Text="Back"
                        Command="{Binding CloseCommand}"
                        BackgroundColor="#3C3C3C"
                        TextColor="White"
                        CornerRadius="6"
                        Padding="15,8"
                        FontSize="14"/>

                <VerticalStackLayout Grid.Column="1"
                                   Margin="20,0,0,0"
                                   VerticalOptions="Center">
                    <Label Text="{Binding Model.Name}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           LineBreakMode="TailTruncation"/>
                    <HorizontalStackLayout Spacing="10">
                        <Frame BackgroundColor="#0078D4"
                               Padding="6,2"
                               CornerRadius="4"
                               HasShadow="False">
                            <Label Text="{Binding Model.FileType}"
                                   FontSize="11"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </Frame>
                        <Label Text="{Binding Model.FileSize, Converter={StaticResource FileSizeConverter}}"
                               FontSize="13"
                               TextColor="#AAAAAA"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - 3D Viewer -->
            <Frame Grid.Column="0"
                   BackgroundColor="#252525"
                   Padding="15"
                   CornerRadius="10"
                   HasShadow="False"
                   Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Viewer Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="3D Preview"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"/>

                        <Button Grid.Column="1"
                                Text="Reset"
                                Command="{Binding ResetViewCommand}"
                                BackgroundColor="#3C3C3C"
                                TextColor="White"
                                CornerRadius="6"
                                Padding="12,6"
                                FontSize="13"/>
                    </Grid>

                    <!-- 3D Viewer -->
                    <Frame Grid.Row="1"
                           BackgroundColor="#1A1A1A"
                           Padding="0"
                           CornerRadius="8"
                           HasShadow="False"
                           BorderColor="#444444">
                        <controls:Model3DViewer x:Name="Model3DViewer"
                                              BackgroundColor="#1A1A1A"/>
                    </Frame>
                </Grid>
            </Frame>

            <!-- Right Side - Details Panel -->
            <ScrollView Grid.Column="1">
                <VerticalStackLayout Spacing="15">
                    
                    <!-- File Information Card -->
                    <Frame BackgroundColor="#2C2C2C"
                           Padding="20"
                           CornerRadius="10"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="12">
                            <Label Text="File Information"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"/>

                            <BoxView HeightRequest="1" BackgroundColor="#444444"/>

                            <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                  RowSpacing="10">
                                <Label Grid.Row="0"
                                       Text="Type:"
                                       FontSize="13"
                                       TextColor="#AAAAAA"/>
                                <Label Grid.Row="0"
                                       Text="{Binding Model.FileType}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="End"/>

                                <Label Grid.Row="1"
                                       Text="Size:"
                                       FontSize="13"
                                       TextColor="#AAAAAA"/>
                                <Label Grid.Row="1"
                                       Text="{Binding Model.FileSize, Converter={StaticResource FileSizeConverter}}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="End"/>

                                <Label Grid.Row="2"
                                       Text="Uploaded:"
                                       FontSize="13"
                                       TextColor="#AAAAAA"/>
                                <Label Grid.Row="2"
                                       Text="{Binding Model.UploadedDate, StringFormat='{0:MM/dd/yyyy HH:mm}'}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="End"/>

                                <Label Grid.Row="3"
                                       Text="Triangles:"
                                       FontSize="13"
                                       TextColor="#AAAAAA"
                                       IsVisible="{Binding Model.ParsedModel, Converter={StaticResource IsNotNullConverter}}"/>
                                <Label Grid.Row="3"
                                       Text="{Binding Model.ParsedModel.Triangles.Count}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="End"
                                       IsVisible="{Binding Model.ParsedModel, Converter={StaticResource IsNotNullConverter}}"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Tags Card -->
                    <Frame BackgroundColor="#2C2C2C"
                           Padding="20"
                           CornerRadius="10"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="12">
                            <Label Text="Tags"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"/>

                            <BoxView HeightRequest="1" BackgroundColor="#444444"/>

                            <!-- Tag Input -->
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5">
                                <Entry Grid.Column="0"
                                       Text="{Binding NewTagText}"
                                       Placeholder="Add tag..."
                                       PlaceholderColor="#888888"
                                       TextColor="White"
                                       BackgroundColor="#3C3C3C"
                                       FontSize="13"
                                       HeightRequest="36"
                                       ReturnCommand="{Binding AddTagCommand}"/>
                                <Button Grid.Column="1"
                                        Text="+"
                                        Command="{Binding AddTagCommand}"
                                        BackgroundColor="#0078D4"
                                        TextColor="White"
                                        WidthRequest="36"
                                        HeightRequest="36"
                                        CornerRadius="4"
                                        Padding="0"
                                        FontSize="18"
                                        FontAttributes="Bold"/>
                            </Grid>

                            <!-- Tags Display -->
                            <FlexLayout Wrap="Wrap"
                                       Direction="Row"
                                       JustifyContent="Start">
                                <BindableLayout.ItemsSource>
                                    <Binding Path="Model.Tags"/>
                                </BindableLayout.ItemsSource>
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <Frame BackgroundColor="#0078D4"
                                               Padding="10,5"
                                               CornerRadius="12"
                                               HasShadow="False"
                                               Margin="3,2">
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="{Binding .}"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       VerticalOptions="Center"/>
                                                <Label Text="x"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       VerticalOptions="Center">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ModelDetailViewModel}}, Path=RemoveTagCommand}"
                                                                            CommandParameter="{Binding .}"/>
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </HorizontalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </FlexLayout>
                        </VerticalStackLayout>
                    </Frame>

                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>

</ContentPage>
